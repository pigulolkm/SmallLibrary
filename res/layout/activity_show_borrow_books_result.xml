<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowBorrowBooksResultActivity" >
	
    <TextView 
        android:id="@+id/textViewBorrowBooksSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:layout_marginLeft="5dp"/>
    
    <ListView
            android:id="@+id/listViewBorrowBooksSuccessResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    
    <TextView 
        android:id="@+id/textViewBorrowBooksFail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:layout_marginLeft="5dp"/>
    
    <ListView
            android:id="@+id/listViewBorrowBooksFailResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>
