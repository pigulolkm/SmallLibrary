<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".RegistrationActivity" >
	
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:background="#80ffffff">
	    <LinearLayout
	        android:id="@+id/layout1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/textViewBorrowingLimit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="12dp"
	            android:text="Borrowing Limit : "
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/textViewRenewalLimit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="30dp"
	            android:text="Renewal Limit : "
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/textViewBorrowingPeriod"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="30dp"
	            android:text="Borrowing Period (Day): "
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/textViewReservationLimit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="30dp"
	            android:text="Reservation Limit : "
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/textViewOutDateFine"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="30dp"
	            android:text="Out Date Fine ($): "
	            android:textStyle="bold"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:orientation="vertical" >
	
	        <EditText
	            android:id="@+id/editTextBorrowingLimit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:inputType="number"
	            android:ems="5"
	            android:maxLength="5" />
	
	        <EditText
	            android:id="@+id/editTextRenewalLimit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:ems="5"
	            android:inputType="number"
	            android:maxLength="5" />
	
	        <EditText
	            android:id="@+id/editTextBorrowingPeriod"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:ems="5"
	            android:inputType="number"
	            android:maxLength="5" />
	
	        <EditText
	            android:id="@+id/editTextReservationLimit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:ems="5"
	            android:inputType="number"
	            android:maxLength="5" />
	
	        <EditText
	            android:id="@+id/editTextOutDateFine"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:ems="5"
	            android:inputType="numberDecimal"
	            android:maxLength="5" />
	    </LinearLayout>
	
	    <Button
	        android:id="@+id/buttonUpdateRule"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/linearLayout1"
	        android:layout_below="@+id/linearLayout1"
	        android:layout_marginTop="35dp"
	        android:onClick="updateRule"
	        android:textStyle="bold"
	        android:text="Update" />
	
	    <Button
	        android:id="@+id/buttonResetRule"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/buttonUpdateRule"
	        android:layout_alignBottom="@+id/buttonUpdateRule"
	        android:layout_alignLeft="@+id/layout1"
	        android:onClick="resetRule"
	        android:textStyle="bold"
	        android:text="Reset" />
	</RelativeLayout>
</RelativeLayout>