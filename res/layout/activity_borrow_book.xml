<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".BorrowBooksActivity" >
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_margin="10dp"
    	android:background="#80ffffff">
    	
    	<RelativeLayout
            android:id="@+id/layout_BorrowBookHeader"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:background="#66ffffff">
		    <TextView
		        android:id="@+id/textViewBorrowBooksCount"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:layout_marginRight="20dp"
		        android:layout_marginBottom="2dp"
		        android:textColor="#ff0000"
		        android:textStyle="bold"/>
	    </RelativeLayout>
	    
		<ListView
	            android:id="@+id/listViewBorrowBooks"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:fadeScrollbars="false"
	            android:layout_below="@+id/layout_BorrowBookHeader"
	            android:layout_marginBottom="70dp"/>
		 
	    <RelativeLayout
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="5dp"
	    	android:layout_alignParentBottom="true"
	    	android:background="#66ffffff" >
	
		    <Button
		        android:id="@+id/btnConfirmBorrowBooks"
		        android:layout_width="150dip"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/btnScanBook"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="20dp"
		        android:onClick="ConfirmBorrowBooks"
		        android:textStyle="bold"
		        android:text="Borrow" />
	
		    <Button
		        android:id="@+id/btnScanBook"
		        android:layout_width="150dip"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="20dp"
		        android:onClick="ScanBooks"
		        android:textStyle="bold"
		        android:text="Scan books" />
	
	    </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
