<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".RegistrationActivity" >
	
	    <TextView
	        android:id="@+id/textViewLastName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:text="Last Name :"
	        android:textSize="14dip" />
	
	    <EditText
	        android:id="@+id/editTextLastName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_alignLeft="@+id/textViewLastName"
	        android:layout_below="@+id/textViewLastName"
	        android:ems="10" >
	
	        <requestFocus />
	    </EditText>
	
	    <TextView
	        android:id="@+id/textViewFirstName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editTextLastName"
	        android:layout_below="@+id/editTextLastName"
	        android:layout_marginTop="14dp"
	        android:text="First Name :" />
	
	    <EditText
	        android:id="@+id/editTextFirstName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_alignLeft="@+id/textViewFirstName"
	        android:layout_alignRight="@+id/editTextLastName"
	        android:layout_below="@+id/textViewFirstName"
	        android:ems="10" />
	    
	    <TextView
	        android:id="@+id/textViewPhoneNo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editTextFirstName"
	        android:layout_below="@+id/editTextFirstName"
	        android:layout_marginTop="14dp"
	        android:text="Phone No. :" />
		
	    <EditText
	        android:id="@+id/editTextPhoneNo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_alignLeft="@+id/textViewPhoneNo"
	        android:layout_alignRight="@+id/editTextFirstName"
	        android:layout_below="@+id/textViewPhoneNo"
	        android:ems="10" 
	        android:inputType="phone"/>
	    
	    <TextView
	        android:id="@+id/textViewEmail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editTextPhoneNo"
	        android:layout_below="@+id/editTextPhoneNo"
	        android:layout_marginTop="14dp"
	        android:text="Email :" />
	    
	    <EditText
	        android:id="@+id/editTextEmail"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_alignLeft="@+id/textViewEmail"
	        android:layout_alignRight="@+id/editTextPhoneNo"
	        android:layout_below="@+id/textViewEmail"
	        android:ems="10"
	        android:inputType="textEmailAddress" />
	    
	    <TextView
	        android:id="@+id/textViewIDNO"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editTextEmail"
	        android:layout_below="@+id/editTextEmail"
	        android:layout_marginTop="14dp"
	        android:text="Identity Card No. :" />
	    
	    <EditText
	        android:id="@+id/editTextIDNO"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_alignLeft="@+id/textViewIDNO"
	        android:layout_alignRight="@+id/editTextEmail"
	        android:layout_below="@+id/textViewIDNO"
	        android:ems="10" />
	    
	    <TextView
	        android:id="@+id/textViewBirthday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editTextIDNO"
	        android:layout_below="@+id/editTextIDNO"
	        android:layout_marginTop="14dp"
	        android:text="Birthday :" />
	    
	    <EditText
	        android:id="@+id/editTextBirthday"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:selectAllOnFocus="true"
	        android:layout_alignLeft="@+id/textViewBirthday"
	        android:layout_alignRight="@+id/editTextIDNO"
	        android:layout_below="@+id/textViewBirthday"
	        android:ems="10" />
	    
	    <TextView
	        android:id="@+id/textViewPassword"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editTextBirthday"
	        android:layout_below="@+id/editTextBirthday"
	        android:layout_marginTop="14dp"
	        android:text="Password :" />
	    
	    <EditText
	        android:id="@+id/editTextPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_alignLeft="@+id/textViewPassword"
	        android:layout_alignRight="@+id/editTextBirthday"
	        android:layout_below="@+id/textViewPassword"
	        android:ems="10"
	        android:inputType="textPassword" />
	    
	    <TextView
	        android:id="@+id/textViewConfirmPassword"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editTextPassword"
	        android:layout_below="@+id/editTextPassword"
	        android:layout_marginTop="14dp"
	        android:text="Confirm Password :" />
	    
	    <EditText
	        android:id="@+id/editTextConfirmPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:layout_alignLeft="@+id/textViewConfirmPassword"
	        android:layout_alignRight="@+id/editTextPassword"
	        android:layout_below="@+id/textViewConfirmPassword"
	        android:ems="10"
	        android:inputType="textPassword" />
	    
	    <Button
	        android:id="@+id/ButtonRegister"
	        android:layout_marginTop="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/editTextConfirmPassword"
	        android:layout_below="@+id/editTextConfirmPassword"
	        android:onClick="registration"
	        android:text="Register" />
	    
	    <Button
	        android:id="@+id/ButtonReset"
	        android:layout_marginTop="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editTextConfirmPassword"
	        android:layout_below="@+id/editTextConfirmPassword"
	        android:onClick="reset"
	        android:text="Reset" />
	</RelativeLayout>
</ScrollView>